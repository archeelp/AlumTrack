<div class="main">

	<!-- Sign up form -->
	<section class="signup">
		<div class="container" style="background-color: rgb(199, 245, 230);">
			<div class="signup-content">
				<div class="signup-form">
					<h2 class="form-title">Sign up</h2>
					<form id="signup" method="POST" action="/signup">
						<div class="form-group">
							<label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
							<input style="border-radius: 10px;" type="text" name="username" id="username"
								placeholder="Username" required />
						</div>
						<div class="form-group">
							<label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
							<input style="border-radius: 10px;" type="text" name="fname" id="fname" placeholder="First Name" required />
						</div>
						<div class="form-group">
							<label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
							<input style="border-radius: 10px;" type="text" name="lname" id="lname" placeholder="Last Name" required />
						</div>
						<div class="form-group">
							<label for="email"><i class="zmdi zmdi-email"></i></label>
							<input style="border-radius: 10px;" type="email" name="email" id="email"
								placeholder="abcd@mailme.com" required pattern="[a-z0-9._%+-+@[a-z0-9.-+\.[a-z{2,}$" />
						</div>
						<div class="form-group">
							<label for="email"><i class="zmdi zmdi-email"></i></label>
							<input style="border-radius: 10px;" type="tel" name="contactnumber" id="contactnumber" placeholder="10 Digit Phone Number" required />
						</div>
						<div class="form-group">
							<label for="pw1"><i class="zmdi zmdi-lock"></i></label>
							<input style="border-radius: 10px;" type="password" name="password" id="pw1"
								placeholder="Password" required pattern="(?=.*\d)(?=.*[a-z)(?=.*[A-Z).{8,}" />
						</div>
						
						<div class="form-group">
							<label for="pw2"><i class="zmdi zmdi-lock-outline"></i></label>
							<input style="border-radius: 10px;" type="password" name="re_pass" id="pw2"
								placeholder="Repeat password" required pattern="(?=.*\d)(?=.*[a-z)(?=.*[A-Z).{8,}" />
						</div>
						
	
						<div class="form-group">
						<input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
						<label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in Terms of service<a href="#"
								class="term-service"></a></label>
						</div>
						
						<button class="btn btn-success" id="register">Register Now</button>
						
					</form>
				</div>
				<div class="signup-image" style="color: rgb(26, 24, 24); width:70%; padding-top: 100px;">
					<figure><img src="https://i.ibb.co/28TkXLn/signup-image.jpg" alt="sing up image"></figure>
					<a style="color: black;" href="/signin" class="signup-image-link">I am already member</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Sing in  Form -->


</div>
